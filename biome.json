{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"indentStyle": "space",
		"indentWidth": 2,
		"formatWithErrors": true
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"bracketSpacing": true,
			"trailingCommas": "none",
			"jsxQuoteStyle": "double"
		}
	},
	"json": {
		"parser": {
			"allowComments": false,
			"allowTrailingCommas": false
		},
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignore": ["**/*.css"]
	},
	"organizeImports": {
		"enabled": true
	},
	"css": {
		"linter": {
			"enabled": false
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off",
				"noConfusingLabels": "off",
				"noShadowRestrictedNames": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"useHookAtTopLevel": "error",
				"noUnusedImports": "error",
				"noChildrenProp": "off",
				"useUniqueElementIds": "off"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {
						"attributes": ["classList"],
						"functions": ["cn", "twJoin", "tv", "composeRenderProps", "composeTailwindRenderProps"]
					}
				}
			},
			"complexity": {
				"useArrowFunction": "error"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"a11y": {
				"useAnchorContent": "off",
				"useValidAnchor": "off",
				"useAltText": "off"
			}
		}
	}
}
